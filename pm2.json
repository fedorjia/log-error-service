{
    "name" : "log-error-service",
    "script" : "./src/index.js",
    "exec_mode": "cluster",
    "instances": 1,
    "max_memory_restart": "500M",
    "env": {
      "NODE_ENV" : "production"
    },
    "error_file" : "/mnt/log/node/log-error-service-error.log",
    "out_file" : "/mnt/log/node/log-error-service-out.log",
    "merge_logs" : true,
    "combine_logs": true,
    "log_date_format": "YYYY-MM-DD HH:mm Z"
}